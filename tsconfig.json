{
   "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "module": "es6",
      "target": "es6",
      "esModuleInterop": true,
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "dist/js",
      "noEmitOnError": true,
      "moduleResolution": "node",
      "typeRoots": [ "node_modules/@types" ]
   },
   "include": ["src/**/*"]
}